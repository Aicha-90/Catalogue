{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="produit">
        <form method="POST" action="{{ path("ajouter_produit") }}">
            <div class="form-group">
                <label for="nom">Name:</label>
                <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="nom">
            </div>
            <div class="form-group">
                <label for="prix">Prix:</label>
                <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="prix">
            </div>             
            <div class="form-group">
                <label for="stockMaxCommande">Stock available:</label>
                <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="stockMaxCommande">
            </div>
            <div class="form-group">
                <label for="stockCommande">Stock odered:</label>
                <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="stockCommande">
            </div>    
            <div class="form-group">
                <label for="tva">Tva:</label>
                <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="tva">
            </div>
              
            <div class="btnAjouter">
                <button type="submit" name="submit" class="btn btn-primary">Ajouter</button>
            </div>
        </form>
    </div>
    <div class="test">
        <p>{{ totalTtc }}</p>
    </div>
{% endblock %}
